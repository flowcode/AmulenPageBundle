{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body %}
{{ include('FlowcodePageBundle:AdminMenu:menuHeader.html.twig') }}
<section class="content">
<div class="box">

    <div class="box-header">
        <h3 class="box-title">
            {{ entity.name|title }}
            <small>{{ 'items' }}</small>
        </h3>
        <div class="box-tools">
            <a href="{{ path('admin_menu') }}">
                Back to the list
            </a>
            <a href="{{ path('admin_menu_edit', { 'id': entity.id }) }}">
                Edit
            </a>
            {{ form(delete_form) }}
        </div>
    </div>

    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ entity.enabled }}</td>
            </tr>
        </tbody>
    </table>
</div>
</section>
{% endblock %}
