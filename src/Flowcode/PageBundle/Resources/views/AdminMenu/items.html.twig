{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body %}
{{ include('FlowcodePageBundle:AdminMenu:menuHeader.html.twig') }}
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">
                {{ menu.name|title }}
                <small>{{ 'items' }}</small>
            </h3>
            <div class="box-tools">
                <a class="btn btn-link btn-xs" href="{{ path('admin_menu_show', {'id': menu.id}) }}">
                    {{ "back to menu"|trans|title }}
                </a>
                <a class="btn btn-link btn-xs" href="{{ path('admin_menu_item_new', {'id': menu.id}) }}">
                    <i class="fa fa-plus"></i> {{ "add item"|trans|title }}
                </a>
            </div>
        </div>
        <div class="box-body">
            <div class="tree">
                {{ include('FlowcodePageBundle:AdminMenu:menuitem_tree.html.twig',{ 'entities': entities }) }}
            </div>
        </div>

    </div>
</section>
{% endblock %}
