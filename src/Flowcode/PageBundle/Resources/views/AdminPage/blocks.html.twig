<div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
        {% for pageBlockGroup in entities %}
        <li class="{% if loop.first %}active{% endif %}">
            <a data-toggle="tab" href="#tab{{loop.index}}">{{ pageBlockGroup.lang }}</a>
        </li>
        {% endfor %}
    </ul>
    <div class="tab-content">
        {% for pageBlockGroup in entities %}
        <div class="tab-pane {% if loop.first %}active{% endif %}" id="tab{{loop.index}}">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>{{ "Name"|trans }}</th>
                        <th>{{ "Type"|trans }}</th>
                        <th>{{ "Content"|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for pageBlock in pageBlockGroup.blocks %}
                    <tr>
                        <td><a href="{{ path('admin_page_block_edit', { 'id': pageBlock.id }) }}">{{ pageBlock.name }}</a></td>
                        <td>{{ pageBlock.type }}</td>
                        <td>{{ pageBlock.content|raw }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endfor %}
    </div>
</div>
